@using Hubletix.Core.Models
@using Hubletix.Api.Models

@* This partial accepts ComponentRenderContext<T> where T can be HeroComponentConfig or HeroComponentViewModel *@

@{
    // Defensive null check and type validation
    if (Model == null)
    {
        <div class="alert alert-danger m-3">
            <i class="bi bi-x-circle"></i> Error: Hero component model is null
        </div>
        return;
    }

    // Extract hero component and theme colors
    object? heroComponent = null;
    string? primaryColor = null;
    string? secondaryColor = null;
    bool isPreviewMode = false;

    // Try to extract from ComponentRenderContext<HeroComponentConfig>
    if (Model is ComponentRenderContext<HeroComponentConfig> configContext)
    {
        heroComponent = configContext.Component;
        primaryColor = configContext.PrimaryColor;
        secondaryColor = configContext.SecondaryColor;
        isPreviewMode = configContext.IsPreviewMode;
    }
    // Try to extract from ComponentRenderContext<HomePageComponentConfig>
    else if (Model is ComponentRenderContext<HomePageComponentConfig> baseConfigContext && 
             baseConfigContext.Component is HeroComponentConfig heroConfig)
    {
        heroComponent = heroConfig;
        primaryColor = baseConfigContext.PrimaryColor;
        secondaryColor = baseConfigContext.SecondaryColor;
        isPreviewMode = baseConfigContext.IsPreviewMode;
    }
    // Try to extract from ComponentRenderContext<HeroComponentViewModel>
    else if (Model is ComponentRenderContext<HeroComponentViewModel> viewModelContext)
    {
        heroComponent = viewModelContext.Component;
        primaryColor = viewModelContext.PrimaryColor;
        secondaryColor = viewModelContext.SecondaryColor;
        isPreviewMode = viewModelContext.IsPreviewMode;
    }
    else
    {
        <div class="alert alert-danger m-3">
            <i class="bi bi-x-circle"></i> Error: Invalid model type for Hero component. Expected ComponentRenderContext.
        </div>
        return;
    }

    if (heroComponent == null)
    {
        <div class="alert alert-danger m-3">
            <i class="bi bi-x-circle"></i> Error: Hero component data is null
        </div>
        return;
    }

    // Extract properties based on type
    string heading = "";
    string subheading = "";
    string? ctaText = null;
    string? ctaUrl = null;
    string? backgroundImageUrl = null;

    if (heroComponent is HeroComponentConfig config)
    {
        heading = config.Heading ?? "";
        subheading = config.Subheading ?? "";
        ctaText = config.CtaText;
        ctaUrl = config.CtaUrl;
        backgroundImageUrl = config.BackgroundImageUrl;
    }
    else if (heroComponent is HeroComponentViewModel viewModel)
    {
        heading = viewModel.Heading ?? "";
        subheading = viewModel.Subheading ?? "";
        ctaText = viewModel.CtaText;
        ctaUrl = viewModel.CtaUrl;
        backgroundImageUrl = viewModel.BackgroundImageUrl;
    }

    var sectionClass = isPreviewMode ? "hero-section preview-mode" : "hero-section";
    var useAnimatedGradient = false;
    
    // Build background style and image URLs for responsive variants
    string backgroundStyle;
    bool hasBackgroundImage = !string.IsNullOrEmpty(backgroundImageUrl);
    
    if (hasBackgroundImage)
    {
        // Use image with dark overlay for text readability
        // Note: This will be replaced by picture element in the HTML
        backgroundStyle = $"background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)); background-size: cover; background-position: center;";
    }
    else
    {
        // Modern SaaS gradient fallback with multiple color stops and subtle animation
        useAnimatedGradient = true;
        sectionClass += " animated-gradient-bg";
        backgroundStyle = "";
    }

    // Helper function to generate variant URLs
    Func<string, int, string, string> generateVariantUrl = (imageId, width, format) =>
    {
        // Remove extension from canonical URL to get base path
        var baseUrl = backgroundImageUrl ?? "";
        var lastDotIndex = baseUrl.LastIndexOf('.');
        if (lastDotIndex > 0)
        {
            var basePath = baseUrl[..lastDotIndex];
            return $"{basePath}-{width}w-{format}-q{(format == "avif" ? 50 : (format == "webp" ? 75 : 80))}-v1.{(format == "jpeg" ? "jpg" : format)}";
        }
        return "";
    };

    // Extract image ID from URL if available
    // Format: https://domain.com/tenant-{tenantId}/{imageId}.ext
    string? imageId = null;
    if (hasBackgroundImage && backgroundImageUrl != null)
    {
        var uri = new Uri(backgroundImageUrl);
        var pathParts = uri.AbsolutePath.TrimStart('/').Split('/');
        if (pathParts.Length >= 2)
        {
            var fileName = pathParts[^1];
            var lastDotIndex = fileName.LastIndexOf('.');
            if (lastDotIndex > 0)
            {
                imageId = fileName[..lastDotIndex];
            }
        }
    }
}

@if (useAnimatedGradient)
{
    <style>
        .animated-gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            background-size: 200% 200%;
            animation: gradient-shift 15s ease infinite;
        }
        
        @@keyframes gradient-shift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
    </style>
}

<section class="@sectionClass position-relative overflow-hidden" style="min-height: 500px; @backgroundStyle">
    @* Background image with responsive variants *@
    @if (hasBackgroundImage && !string.IsNullOrEmpty(backgroundImageUrl) && imageId != null)
    {
        <style>
            .hero-section-bg-picture {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: 0;
            }

            .hero-section-bg-picture img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
            }

            .hero-section-overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4));
                z-index: 1;
            }

            .hero-section-content {
                position: relative;
                z-index: 2;
            }
        </style>

        <picture class="hero-section-bg-picture">
            <!-- AVIF variants - highest quality -->
            <source 
                srcset="@generateVariantUrl(imageId, 640, "avif") 640w, @generateVariantUrl(imageId, 1280, "avif") 1280w, @generateVariantUrl(imageId, 1920, "avif") 1920w" 
                type="image/avif" />
            
            <!-- WebP variants - good quality and broad support -->
            <source 
                srcset="@generateVariantUrl(imageId, 640, "webp") 640w, @generateVariantUrl(imageId, 1280, "webp") 1280w, @generateVariantUrl(imageId, 1920, "webp") 1920w" 
                type="image/webp" />
            
            <!-- JPEG variants - fallback for older browsers -->
            <source 
                srcset="@generateVariantUrl(imageId, 640, "jpeg") 640w, @generateVariantUrl(imageId, 1280, "jpeg") 1280w, @generateVariantUrl(imageId, 1920, "jpeg") 1920w" 
                type="image/jpeg" />
            
            <!-- Canonical/original image as ultimate fallback -->
            <img 
                src="@backgroundImageUrl" 
                alt="Hero background image"
                loading="lazy"
                decoding="async" />
        </picture>

        <div class="hero-section-overlay"></div>
    }

    <div class="container hero-section-content">
        <div class="row min-vh-50 align-items-center py-5">
            <div class="col-lg-8 col-xl-7 text-white">
                @if (!string.IsNullOrEmpty(heading))
                {
                    <h1 class="display-3 fw-bold mb-4" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
                        @heading
                    </h1>
                }
                @if (!string.IsNullOrEmpty(subheading))
                {
                    <p class="lead mb-4 fs-4" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">
                        @subheading
                    </p>
                }
                @if (!string.IsNullOrEmpty(ctaUrl) && !string.IsNullOrEmpty(ctaText))
                {
                    <a href="@ctaUrl" class="btn btn-lg btn-light px-5 py-3 rounded-pill shadow-lg">
                        @ctaText <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                }
            </div>
        </div>
    </div>
</section>
