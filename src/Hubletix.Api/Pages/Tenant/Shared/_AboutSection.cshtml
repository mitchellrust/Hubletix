@using Hubletix.Api.Models
@model AboutSectionViewModel

<section class="about-section py-5 bg-light">
    <div class="container py-4">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                @if (!string.IsNullOrEmpty(Model.Heading))
                {
                    <h2 class="display-5 fw-bold mb-4">@Model.Heading</h2>
                }
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="lead text-muted">@Model.Description</p>
                }
            </div>
        </div>

        @if (Model.Features.Any())
        {
            <div class="row g-4 mb-5">
                @foreach (FeatureCard feature in Model.Features)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card card-hover h-100 border-0 shadow-sm overflow-hidden feature-card">
                            @if (!string.IsNullOrEmpty(feature.ImageUrl))
                            {
                                <div class="position-relative" style="height: 250px; overflow: hidden;">
                                    <img src="@feature.ImageUrl" class="card-img-top w-100 h-100" alt="@feature.Title" style="object-fit: cover; transition: transform 0.3s ease;">
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(feature.Icon))
                            {
                                <div class="card-body text-center pt-5">
                                    <i class="bi bi-@feature.Icon display-1 mb-3" style="@($"color: {Model.AccentColor ?? "var(--bs-primary)"};")"></i>
                                </div>
                            }
                            <div class="card-body @(string.IsNullOrEmpty(feature.ImageUrl) && string.IsNullOrEmpty(feature.Icon) ? "pt-4" : "")">
                                <h5 class="card-title fw-bold mb-3">@feature.Title</h5>
                                <p class="card-text text-muted">@feature.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<style>
    .feature-card:hover img {
        transform: scale(1.05);
    }
</style>
