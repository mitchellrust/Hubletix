@page "{id}"
@model EventDetailModel
@{
    ViewData["Title"] = Model.Event?.Name ?? "Event Details";
    Layout = "_PublicLayout";
}

@if (Model.Event == null)
{
    <div class="container py-5">
        <div class="text-center">
            <i class="bi bi-exclamation-circle display-1 text-muted"></i>
            <h2 class="mt-3">Event Not Found</h2>
            <p class="text-muted">This event may have been removed or is no longer available.</p>
            <a href="/events" class="btn btn-primary mt-3">Browse Events</a>
        </div>
    </div>
}
else
{
    <div class="container py-5">
        <!-- Back Button -->
        <div class="mb-4">
            <a href="/events" class="btn btn-link text-decoration-none ps-0">
                <i class="bi bi-arrow-left me-2"></i>Back to Events
            </a>
        </div>

        <div class="row g-4">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Event Details Card -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <span class="badge bg-secondary mb-2">@Model.Event.EventType</span>
                                <h1 class="h2 fw-bold mb-0">@Model.Event.Name</h1>
                            </div>
                            @if (Model.Event.IsFull)
                            {
                                <span class="badge bg-danger fs-6">Event Full</span>
                            }
                            else if (Model.Event.SpotsRemaining <= 5 && Model.Event.MaxAttendees.HasValue)
                            {
                                <span class="badge bg-warning text-dark fs-6">@Model.Event.SpotsRemaining spots left</span>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Event.Description))
                        {
                            <div class="mb-4">
                                <p class="text-muted" style="white-space: pre-line;">@Model.Event.Description</p>
                            </div>
                        }

                        <!-- Event Info -->
                        <div class="border-top pt-4">
                            <h5 class="fw-bold mb-3">Event Information</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-start">
                                        <i class="bi bi-calendar-event fs-4 me-3"
                                            style="color: @(Model.Event.AccentColor ?? "var(--bs-primary)");"></i>
                                        <div>
                                            <div class="small text-muted">Date & Time</div>
                                            <div class="fw-semibold">
                                                @if (Model.Event.IsSameDay)
                                                {
                                                    @Model.Event.StartTimeLocal.ToString("dddd, MMMM dd, yyyy")
                                                    <br />
                                                    @Model.Event.StartTimeLocal.ToString("h:mm tt")
                                                    @if (Model.Event.EndTimeLocal.HasValue)
                                                    {
                                                        @: - @Model.Event.EndTimeLocal.Value.ToString("h:mm tt")
                                                    }
                                                    @Model.Event.TimeZoneAbbreviation
                                                }
                                                else
                                                {
                                                    @Model.Event.StartTimeLocal.ToString("MMM dd, h:mm tt")
                                                    <br />
                                                    @: to @Model.Event.EndTimeLocal?.ToString("MMM dd, h:mm tt")
                                                    @Model.Event.TimeZoneAbbreviation
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.Event.LocationDetails))
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-start">
                                            <i class="bi bi-geo-alt fs-4 me-3"
                                                style="color: @(Model.Event.AccentColor ?? "var(--bs-primary)");"></i>
                                            <div>
                                                <div class="small text-muted">Location Details</div>
                                                <div class="fw-semibold">@Model.Event.LocationDetails</div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (Model.Event.MaxAttendees.HasValue)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-start">
                                            <i class="bi bi-people fs-4 me-3"
                                                style="color: @(Model.Event.AccentColor ?? "var(--bs-primary)");"></i>
                                            <div>
                                                <div class="small text-muted">Attendance</div>
                                                <div class="fw-semibold">
                                                    @Model.Event.CurrentAttendees / @Model.Event.MaxAttendees attendees
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (Model.Event.Price.HasValue && Model.Event.Price.Value > 0)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-start">
                                            <i class="bi bi-tag fs-4 me-3"
                                                style="color: @(Model.Event.AccentColor ?? "var(--bs-primary)");"></i>
                                            <div>
                                                <div class="small text-muted">Price</div>
                                                <div class="fw-semibold">$@Model.Event.Price.Value.ToString("N2")</div>
                                            </div>
                                        </div>
                                    </div>
                                }

                                @if (Model.Event.HasRegistrationDeadline)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-start">
                                            <i class="bi bi-clock fs-4 me-3"
                                                style="color: @(Model.Event.AccentColor ?? "var(--bs-primary)");"></i>
                                            <div>
                                                <div class="small text-muted">Registration Deadline</div>
                                                <div class="fw-semibold">
                                                    @Model.Event.RegistrationDeadline?.ToString("MMM dd, yyyy h:mm tt")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm position-sticky" style="top: 20px;">
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <div class="bg-light rounded p-3 mb-3">
                                @if (Model.Event.StartTimeLocal.Date == DateTime.Today)
                                {
                                    <div class="text-uppercase small fw-semibold text-muted">Today</div>
                                }
                                else if (Model.Event.StartTimeLocal.Date == DateTime.Today.AddDays(1))
                                {
                                    <div class="text-uppercase small fw-semibold text-muted">Tomorrow</div>
                                }
                                else
                                {
                                    <div class="text-uppercase small fw-semibold text-muted">
                                        @Model.Event.StartTimeLocal.ToString("MMM dd")</div>
                                }
                                <div class="h1 fw-bold mb-0"
                                    style="color: @(Model.Event.AccentColor ?? "var(--bs-primary)");">
                                    @Model.Event.StartTimeLocal.ToString("h:mm tt")
                                </div>
                            </div>

                            @if (Model.Event.Price.HasValue && Model.Event.Price.Value > 0)
                            {
                                <div class="h3 mb-3">$@Model.Event.Price.Value.ToString("N2")</div>
                            }
                            else
                            {
                                <div class="h3 text-success mb-3">Free</div>
                            }
                        </div>

                        @if (Model.Event.IsRegistrationClosed)
                        {
                            <button class="btn btn-secondary w-100 rounded-pill py-3 mb-3" disabled>
                                <i class="bi bi-x-circle me-2"></i>Registration Closed
                            </button>
                            <p class="small text-muted text-center mb-0">
                                Registration deadline has passed
                            </p>
                        }
                        else if (Model.Event.IsFull)
                        {
                            <button class="btn btn-secondary w-100 rounded-pill py-3 mb-3" disabled>
                                <i class="bi bi-x-circle me-2"></i>Event Full
                            </button>
                            <p class="small text-muted text-center mb-0">
                                This event is at full capacity
                            </p>
                        }
                        else
                        {
                            <a href="/event/@Model.Event.Id/register" class="btn btn-primary w-100 rounded-pill py-3 mb-3"
                                style="background-color: @(Model.Event.AccentColor ?? "var(--bs-primary)"); border-color: @(Model.Event.AccentColor ?? "var(--bs-primary)");">
                                <i class="bi bi-calendar-check me-2"></i>Register Now
                            </a>

                            @if (Model.Event.MaxAttendees.HasValue)
                            {
                                <div class="progress mb-2" style="height: 8px;">
                                    <div class="progress-bar" role="progressbar"
                                        style="width: @((Model.Event.CurrentAttendees * 100.0 / Model.Event.MaxAttendees.Value))%; background-color: @(Model.Event.AccentColor ?? "var(--bs-primary)");"
                                        aria-valuenow="@Model.Event.CurrentAttendees" aria-valuemin="0"
                                        aria-valuemax="@Model.Event.MaxAttendees">
                                    </div>
                                </div>
                                <p class="small text-muted text-center mb-0">
                                    @Model.Event.SpotsRemaining spots remaining
                                </p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
