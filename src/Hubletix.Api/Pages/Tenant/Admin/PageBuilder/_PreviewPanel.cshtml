@model dynamic
@inject Hubletix.Infrastructure.Services.IHomePageComponentRegistry ComponentRegistry
@using Hubletix.Core.Models
@using Hubletix.Api.Pages.Tenant.Admin.PageBuilder

@{
    // Handle both PreviewPanelModel (from AJAX) and List<object> (from initial load)
    List<object>? components = null;
    string tenantName = "Organization";

    if (Model is PreviewPanelModel previewModel)
    {
        components = previewModel.ComponentRenderContexts;
        tenantName = previewModel.TenantName;
    }
    else if (Model is List<object> list && list.Count > 0 && list[0] is PreviewPanelModel firstModel)
    {
        components = firstModel.ComponentRenderContexts;
        tenantName = firstModel.TenantName;
    }
}

@if (components == null || components.Count == 0)
{
    <div class="d-flex align-items-center justify-content-center" style="min-height: 400px;">
        <div class="text-center text-muted">
            <i class="bi bi-layout-text-window-reverse" style="font-size: 3rem;"></i>
            <p class="mt-3">Your homepage preview will appear here</p>
            <small>Add components to see the preview</small>
        </div>
    </div>
}
else
{
    // Show minimal navbar for preview
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center">
                <span class="fw-bold fs-5">@tenantName</span>
            </a>
            <div id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle">
                            <i class="bi bi-person-circle"></i>
                            <span class="ms-1">User</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    @foreach (object contextObj in components)
    {
        @if (contextObj is ComponentRenderContext<HomePageComponentConfig> context)
        {
            var component = context.Component;
            var partialPath = ComponentRegistry.GetPartialViewPath(component.GetType());
            
            @if (!string.IsNullOrEmpty(partialPath))
            {
                <partial name="@partialPath" model="contextObj" />
            }
            else
            {
                <div class="alert alert-warning m-3">
                    <i class="bi bi-exclamation-triangle"></i>
                    Unknown component type: @component.GetType().Name
                </div>
            }
        }
        else
        {
            <div class="alert alert-danger m-3">
                <i class="bi bi-x-circle"></i>
                Invalid render context type
            </div>
        }
    }

    <footer class="bg-dark text-white py-5 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3">@tenantName</h5>
                </div>
            </div>
            <hr class="my-4 border-secondary">
            <div class="row">
                <div class="col-12 text-center text-white">
                    <small>&copy; @DateTime.Now.Year RustyLabs, LLC. All rights reserved.</small>
                </div>
            </div>
        </div>
    </footer>
}

