@page
@model MembersModel
@{
    ViewData["Title"] = "Members";
    ViewData["TenantName"] = Model.CurrentTenantInfo.Name;
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Facet Filter Panel (Desktop) -->
        <div class="col-auto mb-4 d-none d-xl-block" style="max-width: 280px; min-width: 250px;">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Filters</h6>
                    @if (!string.IsNullOrEmpty(Model.StatusFilter) && Model.StatusFilter != "all" ||
                                        !string.IsNullOrEmpty(Model.MembershipPlanFilter))
                    {
                        <a asp-page="/Admin/Members" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection"
                            class="btn btn-sm btn-link text-decoration-none p-0">Clear</a>
                    }
                </div>
                <div class="card-body p-0">
                    <!-- Status Facet -->
                    <div class="border-bottom p-3">
                        <h6 class="mb-2 fw-semibold small text-uppercase text-muted">Status</h6>
                        <div class="list-group list-group-flush small">
                            <a asp-page="/Admin/Members" asp-route-status="all"
                                asp-route-plan="@Model.MembershipPlanFilter" asp-route-sort="@Model.SortField"
                                asp-route-dir="@Model.SortDirection"
                                class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.StatusFilter == "all" ? "fw-bold text-primary" : "")">
                                All
                            </a>
                            <a asp-page="/Admin/Members" asp-route-status="active"
                                asp-route-plan="@Model.MembershipPlanFilter" asp-route-sort="@Model.SortField"
                                asp-route-dir="@Model.SortDirection"
                                class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.StatusFilter == "active" ? "fw-bold text-primary" : "")">
                                Active
                            </a>
                            <a asp-page="/Admin/Members" asp-route-status="inactive"
                                asp-route-plan="@Model.MembershipPlanFilter" asp-route-sort="@Model.SortField"
                                asp-route-dir="@Model.SortDirection"
                                class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.StatusFilter == "inactive" ? "fw-bold text-primary" : "")">
                                Inactive
                            </a>
                        </div>
                    </div>

                    <!-- Membership Plan Facet -->
                    <div class="p-3">
                        <h6 class="mb-2 fw-semibold small text-uppercase text-muted">Membership Plan</h6>
                        <div class="list-group list-group-flush small">
                            <a asp-page="/Admin/Members" asp-route-status="@Model.StatusFilter" asp-route-plan=""
                                asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection"
                                class="list-group-item list-group-item-action border-0 py-1 px-0 d-flex justify-content-between align-items-center @(string.IsNullOrEmpty(Model.MembershipPlanFilter) ? "fw-bold text-primary" : "")">
                                <span>All Plans</span>
                            </a>
                            @foreach (var facet in Model.MembershipPlanFacets)
                            {
                                <a asp-page="/Admin/Members" asp-route-status="@Model.StatusFilter"
                                    asp-route-plan="@facet.Id" asp-route-sort="@Model.SortField"
                                    asp-route-dir="@Model.SortDirection"
                                    class="list-group-item list-group-item-action border-0 py-1 px-0 d-flex justify-content-between align-items-center @(Model.MembershipPlanFilter == facet.Id ? "fw-bold text-primary" : "")">
                                    <span>@facet.Name</span>
                                    <span class="badge bg-secondary rounded-pill">@facet.Count</span>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Members Table -->
        <div class="col">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">Members</h3>
                        <div class="d-flex gap-2">
                            <button class="btn btn-sm btn-outline-secondary d-xl-none" data-bs-toggle="modal"
                                data-bs-target="#filterModal">
                                <i class="bi bi-funnel"></i> Filters
                                @if (!string.IsNullOrEmpty(Model.StatusFilter) && Model.StatusFilter != "all" ||
                                                                !string.IsNullOrEmpty(Model.MembershipPlanFilter))
                                {
                                    <span class="badge bg-primary rounded-pill ms-1">â€¢</span>
                                }
                            </button>
                            <a class="btn btn-sm btn-primary" href="/admin/members/create">Add Member</a>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <a asp-page="/Admin/Members" asp-route-sort="name"
                                        asp-route-dir="@(Model.SortField == "name" && Model.SortDirection == "asc" ? "desc" : "asc")"
                                        asp-route-status="@Model.StatusFilter"
                                        asp-route-plan="@Model.MembershipPlanFilter" class="text-decoration-none">
                                        Name
                                        @if (Model.SortField == "name")
                                        {
                                            <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                        }
                                    </a>
                                </th>
                                <th>
                                    <a asp-page="/Admin/Members" asp-route-sort="email"
                                        asp-route-dir="@(Model.SortField == "email" && Model.SortDirection == "asc" ? "desc" : "asc")"
                                        asp-route-status="@Model.StatusFilter"
                                        asp-route-plan="@Model.MembershipPlanFilter" class="text-decoration-none">
                                        Email
                                        @if (Model.SortField == "email")
                                        {
                                            <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                        }
                                    </a>
                                </th>
                                <th>
                                    <a asp-page="/Admin/Members" asp-route-sort="membershipplan"
                                        asp-route-dir="@(Model.SortField == "membershipplan" && Model.SortDirection == "asc" ? "desc" : "asc")"
                                        asp-route-status="@Model.StatusFilter"
                                        asp-route-plan="@Model.MembershipPlanFilter" class="text-decoration-none">
                                        Membership Plan
                                        @if (Model.SortField == "membershipplan")
                                        {
                                            <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                        }
                                    </a>
                                </th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Members.Any())
                            {
                                @foreach (var member in Model.Members)
                                {
                                    <tr class="@(member.IsActive ? "" : "table-secondary")">
                                        <td>
                                            <div class="fw-semibold">
                                                @member.FullName
                                                @if (!member.IsActive)
                                                {
                                                    <span class="badge bg-secondary ms-1">Inactive</span>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <a href="mailto:@member.Email" class="text-decoration-none">@member.Email</a>
                                        </td>
                                        <td>
                                            @if (member.MembershipPlanId != null)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>@member.MembershipPlanName
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-dash-circle me-1"></i>None
                                                </span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <button type="button" class="btn btn-sm btn-outline-secondary"
                                                onclick="alert('TODO: Popup for cancel membership or edit member')">Manage</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        <i class="bi bi-people fs-1 d-block mb-2"></i>
                                        No members found. Add your first member to get started.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        Page @Model.PageNum of @Model.TotalPages
                    </div>
                    <div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item @(Model.PageNum == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-page="/Admin/Members"
                                        asp-route-pageNum="@(Model.PageNum - 1)" asp-route-pageSize="@Model.PageSize"
                                        asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection"
                                        asp-route-status="@Model.StatusFilter"
                                        asp-route-plan="@Model.MembershipPlanFilter">Previous</a>
                                </li>
                                @for (int i = Math.Max(1, Model.PageNum - 2); i <= Math.Min(Model.TotalPages,
                                                                Model.PageNum + 2); i++)
                                {
                                    <li class="page-item @(i == Model.PageNum ? "active" : "")">
                                        <a class="page-link" asp-page="/Admin/Members" asp-route-pageNum="@i"
                                            asp-route-pageSize="@Model.PageSize" asp-route-sort="@Model.SortField"
                                            asp-route-dir="@Model.SortDirection" asp-route-status="@Model.StatusFilter"
                                            asp-route-plan="@Model.MembershipPlanFilter">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.PageNum == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-page="/Admin/Members"
                                        asp-route-pageNum="@(Model.PageNum + 1)" asp-route-pageSize="@Model.PageSize"
                                        asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection"
                                        asp-route-status="@Model.StatusFilter"
                                        asp-route-plan="@Model.MembershipPlanFilter">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Modal (Mobile) -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filterModalLabel">Filter Members</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="resetFilters()"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="filterForm" asp-page="/Admin/Members" method="get">
                    <input type="hidden" name="sort" value="@Model.SortField" />
                    <input type="hidden" name="dir" value="@Model.SortDirection" />

                    <!-- Status Filter -->
                    <div class="mb-4">
                        <h6 class="fw-semibold text-uppercase text-muted small mb-3">Status</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" id="statusAll" value="all"
                                @(Model.StatusFilter == "all" ? "checked" : "")>
                            <label class="form-check-label" for="statusAll">All</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" id="statusActive" value="active"
                                @(Model.StatusFilter == "active" ? "checked" : "")>
                            <label class="form-check-label" for="statusActive">Active</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" id="statusInactive"
                                value="inactive" @(Model.StatusFilter == "inactive" ? "checked" : "")>
                            <label class="form-check-label" for="statusInactive">Inactive</label>
                        </div>
                    </div>

                    <!-- Membership Plan Filter -->
                    <div class="mb-3">
                        <h6 class="fw-semibold text-uppercase text-muted small mb-3">Membership Plan</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="plan" id="planAll" value=""
                                @(string.IsNullOrEmpty(Model.MembershipPlanFilter) ? "checked" : "")>
                            <label class="form-check-label" for="planAll">All Plans</label>
                        </div>
                        @foreach (var facet in Model.MembershipPlanFacets)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="plan"
                                    id="plan_@facet.Id.Replace("-", "_")" value="@facet.Id" @(Model.MembershipPlanFilter ==
                                                                                                                            facet.Id ? "checked" : "")>
                                <label class="form-check-label w-100" for="plan_@facet.Id.Replace("-", "_")">
                                    <span class="d-flex justify-content-between align-items-center">
                                        <span>@facet.Name</span>
                                        <span class="badge bg-secondary rounded-pill">@facet.Count</span>
                                    </span>
                                </label>
                            </div>
                        }
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                    onclick="resetFilters()">Cancel</button>
                <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">Clear All</button>
                <button type="button" class="btn btn-primary" onclick="applyFilters()">Apply Filters</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Store the initial filter values when the modal is shown
        let initialStatus = '@Model.StatusFilter';
        let initialPlan = '@Model.MembershipPlanFilter';

        function applyFilters() {
            document.getElementById('filterForm').submit();
        }

        function clearFilters() {
            const form = document.getElementById('filterForm');
            const sortField = form.querySelector('input[name="sort"]').value;
            const sortDir = form.querySelector('input[name="dir"]').value;
            window.location.href = `/admin/members?sort=${sortField}&dir=${sortDir}`;
        }

        function resetFilters() {
            // Reset status radio buttons to initial value
            const statusRadios = document.querySelectorAll('input[name="status"]');
            statusRadios.forEach(radio => {
                radio.checked = (radio.value === initialStatus);
            });

            // Reset plan radio buttons to initial value
            const planRadios = document.querySelectorAll('input[name="plan"]');
            planRadios.forEach(radio => {
                radio.checked = (radio.value === initialPlan);
            });
        }
    </script>
}
