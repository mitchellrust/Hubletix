@page "/membershipplans"
@model MembershipPlansModel
@{
    ViewData["Title"] = "Membership Plans";
    Layout = "_PublicLayout";
}

<div class="container py-5">
    <!-- Page Header -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 fw-bold mb-3">Choose Your Plan</h1>
            <p class="lead text-muted">Select the membership that works best for you.</p>
        </div>
    </div>

    @if (Model.RecurringPlans.Any())
    {
        <!-- Recurring Memberships Section -->
        <div class="row mb-3">
            <div class="col-12">
                <h2 class="h3 fw-bold text-center">Recurring Memberships</h2>
            </div>
        </div>
        
        <div class="row g-4 mb-5 justify-content-center">
            @foreach (var plan in Model.RecurringPlans)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body p-4 d-flex flex-column">
                            <!-- Plan Header -->
                            <div class="text-center mb-4">
                                <h3 class="h5 fw-bold mb-3">@plan.Name</h3>
                                <div class="mb-2">
                                    <span class="display-4 fw-bold" style="color: var(--bs-primary);">@plan.DisplayPriceText</span>
                                    <span class="text-muted">@plan.DisplayIntervalText</span>
                                </div>
                                @if (plan.BillingInterval == "Annually")
                                {
                                    <small class="text-muted">Billed annually at $@(plan.PriceInDollars.ToString("N2"))</small>
                                }
                            </div>

                            <!-- Features List -->
                            <div class="flex-grow-1">
                                @if (plan.Features.Any())
                                {
                                    <ul class="list-unstyled mb-4">
                                        @foreach (var feature in plan.Features)
                                        {
                                            <li class="mb-2">
                                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                                <span>@feature</span>
                                            </li>
                                        }
                                    </ul>
                                }
                                else if (!string.IsNullOrEmpty(plan.Description))
                                {
                                    <p class="text-muted mb-4">@plan.Description</p>
                                }
                            </div>

                            <!-- CTA Button -->
                            <a href="/membershipplans/@plan.Id/checkout" 
                               class="btn btn-lg w-100 rounded-pill" 
                               style="background-color: var(--bs-primary); border-color: var(--bs-primary); color: white;">
                                Get Started
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.OneTimePlans.Any())
    {
        <!-- One-Time Plans Section -->
        <div class="row mb-3">
            <div class="col-12">
                <h2 class="h3 fw-bold text-center">One-Time Purchases</h2>
            </div>
        </div>
        
        <div class="row g-4 justify-content-center">
            @foreach (var plan in Model.OneTimePlans)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm hover-lift">
                        <div class="card-body p-4 d-flex flex-column">
                            <!-- Plan Header -->
                            <div class="text-center mb-4">
                                <h3 class="h5 fw-bold mb-3">@plan.Name</h3>
                                <div class="mb-2">
                                    <span class="display-4 fw-bold" style="color: var(--bs-primary);">@plan.DisplayPriceText</span>
                                </div>
                                <small class="text-muted">One-time purchase</small>
                            </div>

                            <!-- Features List -->
                            <div class="flex-grow-1">
                                @if (plan.Features.Any())
                                {
                                    <ul class="list-unstyled mb-4">
                                        @foreach (var feature in plan.Features)
                                        {
                                            <li class="mb-2">
                                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                                <span>@feature</span>
                                            </li>
                                        }
                                    </ul>
                                }
                                else if (!string.IsNullOrEmpty(plan.Description))
                                {
                                    <p class="text-muted mb-4">@plan.Description</p>
                                }
                            </div>

                            <!-- CTA Button -->
                            <a href="/membershipplans/@plan.Id/checkout" 
                               class="btn btn-lg w-100 rounded-pill" 
                               style="background-color: var(--bs-primary); border-color: var(--bs-primary); color: white;">
                                Purchase Now
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (!Model.RecurringPlans.Any() && !Model.OneTimePlans.Any())
    {
        <div class="row">
            <div class="col-lg-6 mx-auto text-center py-5">
                <i class="bi bi-card-list display-1 text-muted mb-4"></i>
                <h3 class="mb-3">No Plans Available</h3>
                <p class="text-muted">Check back soon for membership options!</p>
            </div>
        </div>
    }
</div>

<style>
    .hover-lift {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>
