@page
@model Hubletix.Api.Pages.Tenant.NoAccessModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h1 class="card-title mb-3">Access Denied</h1>
                    <p class="card-text mb-4">
                        You don't have permission to access this organization.
                    </p>
                    <p class="card-text text-muted mb-4">
                        If you believe this is a mistake, please contact your organization administrator.
                    </p>
                    <a href="/Platform/Login" class="btn btn-primary me-2">
                        Try Different Account
                    </a>
                    <a href="/Platform/Logout" class="btn btn-secondary">
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
