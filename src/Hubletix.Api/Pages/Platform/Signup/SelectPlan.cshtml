@page
@model Hubletix.Api.Pages.Platform.Signup.SelectPlanModel
@{
    ViewData["Title"] = "Choose Your Plan";
}

<div class="bg-light min-vh-100 py-5">
    <div class="container">
        <!-- Header -->
        <div class="text-center mb-5">
            <h1 class="display-3 fw-bold mb-3">Choose Your Plan</h1>
            <p class="lead text-muted">Start your 14-day free trial. No credit card required.</p>
        </div>

        <!-- Plans Grid -->
        @if (Model.Plans != null && Model.Plans.Any())
        {
            <div class="row g-4 mb-5">
                @foreach (var plan in Model.Plans)
                {
                    <div class="col-12 col-lg-4">
                        <div class="card h-100 shadow-lg border-0 @(plan.IsPopular ? "border border-primary border-3" : "")">
                            @if (plan.IsPopular)
                            {
                                <div class="position-absolute top-0 end-0">
                                    <span class="badge bg-primary rounded-start rounded-0 px-3 py-2">Most Popular</span>
                                </div>
                            }
                            
                            <div class="card-body p-4 d-flex flex-column">
                                <h3 class="card-title h2 fw-bold mb-2">@plan.Name</h3>
                                <p class="text-muted mb-4">@plan.Description</p>
                                
                                <div class="mb-4">
                                    <span class="display-4 fw-bold">$@plan.MonthlyPrice</span>
                                    <span class="text-muted">/month</span>
                                    @if (plan.AnnualPrice > 0)
                                    {
                                        <p class="text-success small mt-2">
                                            <i class="bi bi-tag-fill"></i> Save $@((plan.MonthlyPrice * 12) - plan.AnnualPrice) with annual billing
                                        </p>
                                    }
                                </div>

                                <form method="post">
                                    <input type="hidden" name="planId" value="@plan.Id" />
                                    <button type="submit" 
                                            class="btn @(plan.IsPopular ? "btn-primary" : "btn-outline-secondary") btn-lg w-100">
                                        Get Started
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="row mb-5">
                <div class="col-12 col-lg-8 mx-auto">
                    <div class="card shadow-lg border-0">
                        <div class="card-body p-5 text-center">
                            <h2 class="h3 fw-bold mb-3">No plans available</h2>
                            <p class="text-muted mb-0">There are currently no subscription plans to choose from. Please check back later.</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- FAQ Section -->
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <h2 class="card-title h3 fw-bold mb-4 text-center">Frequently Asked Questions</h2>
                        <div class="accordion accordion-flush" id="faqAccordion">
                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                        Can I change plans later?
                                    </button>
                                </h3>
                                <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Yes! You can upgrade or downgrade your plan at any time. Changes take effect immediately.
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                        What payment methods do you accept?
                                    </button>
                                </h3>
                                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        We accept all major credit cards through Stripe's secure payment processing.
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                        Can I cancel anytime?
                                    </button>
                                </h3>
                                <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                    <div class="accordion-body">
                                        Absolutely! Cancel your subscription at any time with no penalties or hidden fees.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
