@page
@model Hubletix.Api.Pages.Platform.UnauthorizedModel
@{
    ViewData["Title"] = "Login Required";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="card-title mb-3">Login Required</h1>
                    <p class="card-text mb-4">
                        You need to be logged in to access this page.
                    </p>
                    <a href="@(string.IsNullOrEmpty(Model.ReturnUrl) ? "/Platform/Login" : $"/Platform/Login?returnUrl={Uri.EscapeDataString(Model.ReturnUrl)}")" class="btn btn-primary">
                        Go to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
