@page
@model Hubletix.Api.Pages.Platform.IndexModel
@{
    ViewData["Title"] = "Hubletix - Sports Club & Fitness Management Platform";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #0066cc;
            --secondary-color: #00509e;
        }
        
        .hero-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
            padding: 100px 0;
        }
        
        .feature-card {
            transition: transform 0.3s ease;
            height: 100%;
        }
        
        .feature-card:hover {
            transform: translateY(-10px);
        }
        
        .btn-cta {
            padding: 12px 32px;
            font-size: 1.1rem;
            border-radius: 50px;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-trophy-fill text-primary me-2"></i>Hubletix
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#pricing">Pricing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Platform/Login">Sign In</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary ms-2" href="/signup/SelectPlan">Get Started</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-3 fw-bold mb-4">Manage Your Sports Club with Ease</h1>
                    <p class="lead mb-4">
                        All-in-one platform for event management, memberships, registrations, and payments. 
                        Built for sports clubs, fitness centers, and community organizations.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="/signup/SelectPlan" class="btn btn-light btn-cta">
                            Start Free Trial
                        </a>
                        <a href="#features" class="btn btn-outline-light btn-cta">
                            Learn More
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 d-none d-lg-block">
                    <div class="text-center">
                        <i class="bi bi-calendar-event display-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">Everything You Need</h2>
                <p class="lead text-muted">Powerful features to run your organization smoothly</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card feature-card border-0 shadow-sm p-4">
                        <div class="text-center mb-3">
                            <i class="bi bi-calendar-check display-4 text-primary"></i>
                        </div>
                        <h4 class="text-center mb-3">Event Management</h4>
                        <p class="text-muted text-center">
                            Create and manage events, classes, and activities. Handle registrations and capacity limits effortlessly.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card border-0 shadow-sm p-4">
                        <div class="text-center mb-3">
                            <i class="bi bi-people display-4 text-primary"></i>
                        </div>
                        <h4 class="text-center mb-3">Member Management</h4>
                        <p class="text-muted text-center">
                            Track memberships, manage renewals, and provide member portals with self-service capabilities.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card border-0 shadow-sm p-4">
                        <div class="text-center mb-3">
                            <i class="bi bi-credit-card display-4 text-primary"></i>
                        </div>
                        <h4 class="text-center mb-3">Payments & Billing</h4>
                        <p class="text-muted text-center">
                            Integrated Stripe payments for memberships, events, and one-time fees. Automated billing and invoicing.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card border-0 shadow-sm p-4">
                        <div class="text-center mb-3">
                            <i class="bi bi-palette display-4 text-primary"></i>
                        </div>
                        <h4 class="text-center mb-3">Custom Branding</h4>
                        <p class="text-muted text-center">
                            Customize your portal with your logo, colors, and branding. Each club gets its own subdomain.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card border-0 shadow-sm p-4">
                        <div class="text-center mb-3">
                            <i class="bi bi-graph-up display-4 text-primary"></i>
                        </div>
                        <h4 class="text-center mb-3">Analytics & Reports</h4>
                        <p class="text-muted text-center">
                            Track attendance, revenue, and engagement with comprehensive reporting and analytics.
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card border-0 shadow-sm p-4">
                        <div class="text-center mb-3">
                            <i class="bi bi-shield-check display-4 text-primary"></i>
                        </div>
                        <h4 class="text-center mb-3">Secure & Reliable</h4>
                        <p class="text-muted text-center">
                            Enterprise-grade security, data backup, and 99.9% uptime guarantee for your peace of mind.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-5 bg-light">
        <div class="container text-center">
            <h2 class="display-5 fw-bold mb-3">Ready to Get Started?</h2>
            <p class="lead text-muted mb-4">Join hundreds of organizations already using Hubletix</p>
            <a href="/signup/SelectPlan" class="btn btn-primary btn-cta">
                Start Your Free Trial
            </a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-4 bg-dark text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2026 Hubletix. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="#" class="text-white text-decoration-none me-3">Privacy</a>
                    <a href="#" class="text-white text-decoration-none">Terms</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
