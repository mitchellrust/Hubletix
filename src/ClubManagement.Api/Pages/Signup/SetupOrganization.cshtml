@page
@model ClubManagement.Api.Pages.Signup.SetupOrganizationModel
@{
    ViewData["Title"] = "Setup Your Organization";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
        <!-- Progress Bar -->
        <div class="mb-8">
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-medium text-indigo-600">Step 2 of 3</span>
                <span class="text-sm text-gray-600">Setup Organization</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-indigo-600 h-2 rounded-full" style="width: 66%"></div>
            </div>
        </div>

        <div class="bg-white rounded-2xl shadow-xl p-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Setup Your Organization</h1>
            <p class="text-gray-600 mb-8">Tell us about your gym or fitness center</p>

            @if (!ModelState.IsValid)
            {
                <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
                    <div class="flex">
                        <svg class="h-5 w-5 text-red-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                        </svg>
                        <div>
                            <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }

            <form method="post" class="space-y-6">
                <input type="hidden" asp-for="SessionId" />

                <div>
                    <label asp-for="OrganizationName" class="block text-sm font-medium text-gray-700 mb-2">
                        Organization Name <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="OrganizationName" 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" 
                           placeholder="Acme Fitness Center" />
                    <span asp-validation-for="OrganizationName" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Subdomain" class="block text-sm font-medium text-gray-700 mb-2">
                        Subdomain <span class="text-red-500">*</span>
                    </label>
                    <div class="flex items-center">
                        <input asp-for="Subdomain" 
                               class="flex-1 px-4 py-3 border border-gray-300 rounded-l-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" 
                               placeholder="acmefitness" />
                        <span class="px-4 py-3 bg-gray-100 border border-l-0 border-gray-300 rounded-r-lg text-gray-600">
                            .clubmanager.com
                        </span>
                    </div>
                    <p class="mt-1 text-sm text-gray-500">This will be your unique URL (only lowercase letters, numbers, and hyphens)</p>
                    <span asp-validation-for="Subdomain" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">
                        Phone Number
                    </label>
                    <input asp-for="PhoneNumber" 
                           type="tel"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" 
                           placeholder="(555) 123-4567" />
                    <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Address" class="block text-sm font-medium text-gray-700 mb-2">
                        Street Address
                    </label>
                    <input asp-for="Address" 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" 
                           placeholder="123 Main Street" />
                    <span asp-validation-for="Address" class="text-red-600 text-sm"></span>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label asp-for="City" class="block text-sm font-medium text-gray-700 mb-2">
                            City
                        </label>
                        <input asp-for="City" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" 
                               placeholder="New York" />
                        <span asp-validation-for="City" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="State" class="block text-sm font-medium text-gray-700 mb-2">
                            State/Province
                        </label>
                        <input asp-for="State" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" 
                               placeholder="NY" />
                        <span asp-validation-for="State" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label asp-for="PostalCode" class="block text-sm font-medium text-gray-700 mb-2">
                            Postal Code
                        </label>
                        <input asp-for="PostalCode" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" 
                               placeholder="10001" />
                        <span asp-validation-for="PostalCode" class="text-red-600 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="Country" class="block text-sm font-medium text-gray-700 mb-2">
                            Country
                        </label>
                        <input asp-for="Country" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-600 focus:border-transparent" 
                               placeholder="USA" />
                        <span asp-validation-for="Country" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div class="flex gap-4 pt-4">
                    <a href="/Signup/CreateAccount?sessionId=@Model.SessionId" 
                       class="flex-1 py-3 px-6 border border-gray-300 rounded-lg font-semibold text-gray-700 text-center hover:bg-gray-50 transition">
                        Back
                    </a>
                    <button type="submit" 
                            class="flex-1 py-3 px-6 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition">
                        Continue to Payment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
