@page "/admin/events"
@model EventsModel
@{
    ViewData["Title"] = "Events";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">@Model.CurrentTenantInfo.Name</h1>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="mb-0">Events</h3>
                <a class="btn btn-sm btn-primary" href="/admin/events/create">Create Event</a>
            </div>
            <div class="btn-group btn-group-sm" role="group" aria-label="Status filter">
                <a asp-page="/Admin/Events" asp-route-status="all" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                   class="btn @(Model.StatusFilter == "all" ? "btn-primary" : "btn-outline-primary")">All</a>
                <a asp-page="/Admin/Events" asp-route-status="active" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                   class="btn @(Model.StatusFilter == "active" ? "btn-primary" : "btn-outline-primary")">Active</a>
                <a asp-page="/Admin/Events" asp-route-status="inactive" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                   class="btn @(Model.StatusFilter == "inactive" ? "btn-primary" : "btn-outline-primary")">Inactive</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a asp-page="/Admin/Events" asp-route-sort="date" asp-route-dir="@(Model.SortField == "date" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-status="@Model.StatusFilter" class="text-decoration-none">Event Start</a>
                        </th>
                        <th>
                            <a asp-page="/Admin/Events" asp-route-sort="name" asp-route-dir="@(Model.SortField == "name" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-status="@Model.StatusFilter" class="text-decoration-none">Name</a>
                        </th>
                        <th>
                            <a asp-page="/Admin/Events" asp-route-sort="type" asp-route-dir="@(Model.SortField == "type" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-status="@Model.StatusFilter" class="text-decoration-none">Type</a>
                        </th>
                        <th>
                            <a asp-page="/Admin/Events" asp-route-sort="capacity" asp-route-dir="@(Model.SortField == "capacity" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-status="@Model.StatusFilter" class="text-decoration-none">Capacity</a>
                        </th>
                        <th>
                            <a asp-page="/Admin/Events" asp-route-sort="registrations" asp-route-dir="@(Model.SortField == "registrations" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-status="@Model.StatusFilter" class="text-decoration-none">Registrations</a>
                        </th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Events.Any())
                    {
                        @foreach (EventDto evt in Model.Events)
                        {
                            <tr class="@(evt.IsActive ? "" : "table-secondary")">
                                <td>
                                    <div class="fw-semibold">@evt.Date.ToString("MMM dd, yyyy")</div>
                                    <div class="text-muted small">@evt.Time</div>
                                </td>
                                <td>
                                    <div class="fw-semibold">
                                        @evt.Name
                                        @if (!evt.IsActive)
                                        {
                                            <span class="badge bg-secondary ms-1">Inactive</span>
                                        }
                                    </div>
                                    <div class="text-muted small">@evt.Location</div>
                                </td>
                                <td>@evt.EventType</td>
                                <td>@evt.Capacity</td>
                                <td>@evt.Registrations</td>
                                <td class="text-end">
                                    <a href="/admin/events/@evt.Id" class="btn btn-sm btn-outline-secondary">Manage</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No events found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">
                Page @Model.PageNum of @Model.TotalPages
            </div>
            <div>
                <a class="btn btn-sm btn-outline-secondary me-2 @(Model.PageNum <= 1 ? "disabled" : string.Empty)" asp-page="/Admin/Events" asp-route-pageNum="@(Model.PageNum - 1)" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" asp-route-status="@Model.StatusFilter">Previous</a>
                <a class="btn btn-sm btn-outline-secondary @(Model.PageNum >= Model.TotalPages ? "disabled" : string.Empty)" asp-page="/Admin/Events" asp-route-pageNum="@(Model.PageNum + 1)" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" asp-route-status="@Model.StatusFilter">Next</a>
            </div>
        </div>
    </div>
</div>
