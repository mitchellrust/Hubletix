@page "/admin/members"
@model MembersModel
@{
    ViewData["Title"] = "Members";
    ViewData["TenantName"] = Model.CurrentTenantInfo.Name;
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="row">
        <!-- Facet Filter Panel -->
        <div class="col-auto mb-4" style="max-width: 280px; min-width: 250px;">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Filters</h6>
                    @if (!string.IsNullOrEmpty(Model.StatusFilter) && Model.StatusFilter != "all" || !string.IsNullOrEmpty(Model.MembershipPlanFilter))
                    {
                        <a asp-page="/Admin/Members" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" class="btn btn-sm btn-link text-decoration-none p-0">Clear</a>
                    }
                </div>
                <div class="card-body p-0">
                    <!-- Status Facet -->
                    <div class="border-bottom p-3">
                        <h6 class="mb-2 fw-semibold small text-uppercase text-muted">Status</h6>
                        <div class="list-group list-group-flush small">
                            <a asp-page="/Admin/Members" asp-route-status="all" asp-route-plan="@Model.MembershipPlanFilter" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                               class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.StatusFilter == "all" ? "fw-bold text-primary" : "")">
                                All
                            </a>
                            <a asp-page="/Admin/Members" asp-route-status="active" asp-route-plan="@Model.MembershipPlanFilter" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                               class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.StatusFilter == "active" ? "fw-bold text-primary" : "")">
                                Active
                            </a>
                            <a asp-page="/Admin/Members" asp-route-status="inactive" asp-route-plan="@Model.MembershipPlanFilter" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                               class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.StatusFilter == "inactive" ? "fw-bold text-primary" : "")">
                                Inactive
                            </a>
                        </div>
                    </div>
                    
                    <!-- Membership Plan Facet -->
                    <div class="p-3">
                        <h6 class="mb-2 fw-semibold small text-uppercase text-muted">Membership Plan</h6>
                        <div class="list-group list-group-flush small">
                            <a asp-page="/Admin/Members" asp-route-status="@Model.StatusFilter" asp-route-plan="" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                               class="list-group-item list-group-item-action border-0 py-1 px-0 d-flex justify-content-between align-items-center @(string.IsNullOrEmpty(Model.MembershipPlanFilter) ? "fw-bold text-primary" : "")">
                                <span>All Plans</span>
                            </a>
                            @foreach (var facet in Model.MembershipPlanFacets)
                            {
                                <a asp-page="/Admin/Members" asp-route-status="@Model.StatusFilter" asp-route-plan="@facet.Id" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                                   class="list-group-item list-group-item-action border-0 py-1 px-0 d-flex justify-content-between align-items-center @(Model.MembershipPlanFilter == facet.Id ? "fw-bold text-primary" : "")">
                                    <span>@facet.Name</span>
                                    <span class="badge bg-secondary rounded-pill">@facet.Count</span>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Members Table -->
        <div class="col">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Members</h3>
                <a class="btn btn-sm btn-primary" href="/admin/members/create">Add Member</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a asp-page="/Admin/Members" asp-route-sort="name" asp-route-dir="@(Model.SortField == "name" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-status="@Model.StatusFilter" asp-route-plan="@Model.MembershipPlanFilter" class="text-decoration-none">
                                Name
                                @if (Model.SortField == "name")
                                {
                                    <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-page="/Admin/Members" asp-route-sort="email" asp-route-dir="@(Model.SortField == "email" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-status="@Model.StatusFilter" asp-route-plan="@Model.MembershipPlanFilter" class="text-decoration-none">
                                Email
                                @if (Model.SortField == "email")
                                {
                                    <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-page="/Admin/Members" asp-route-sort="created" asp-route-dir="@(Model.SortField == "created" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-status="@Model.StatusFilter" asp-route-plan="@Model.MembershipPlanFilter" class="text-decoration-none">
                                Joined
                                @if (Model.SortField == "created")
                                {
                                    <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-page="/Admin/Members" asp-route-sort="membershipplan" asp-route-dir="@(Model.SortField == "membershipplan" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-status="@Model.StatusFilter" asp-route-plan="@Model.MembershipPlanFilter" class="text-decoration-none">
                                Membership Plan
                                @if (Model.SortField == "membershipplan")
                                {
                                    <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                }
                            </a>
                        </th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Members.Any())
                    {
                        @foreach (var member in Model.Members)
                        {
                            <tr class="@(member.IsActive ? "" : "table-secondary")">
                                <td>
                                    <div class="fw-semibold">
                                        @member.FullName
                                        @if (!member.IsActive)
                                        {
                                            <span class="badge bg-secondary ms-1">Inactive</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:@member.Email" class="text-decoration-none">@member.Email</a>
                                </td>
                                <td>
                                    <span class="text-muted">@member.JoinedDate.ToString("MMM d, yyyy")</span>
                                </td>
                                <td>
                                    @if (member.MembershipPlanId != null)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>@member.MembershipPlanName
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-dash-circle me-1"></i>None
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a href="/admin/members/@member.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="bi bi-people fs-1 d-block mb-2"></i>
                                No members found. Add your first member to get started.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-white d-flex justify-content-between align-items-center">
            <div class="text-muted small">
                Page @Model.PageNum of @Model.TotalPages
            </div>
            <div>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.PageNum == 1 ? "disabled" : "")">
                            <a class="page-link" asp-page="/Admin/Members" asp-route-pageNum="@(Model.PageNum - 1)" asp-route-pageSize="@Model.PageSize" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" asp-route-status="@Model.StatusFilter" asp-route-plan="@Model.MembershipPlanFilter">Previous</a>
                        </li>
                        @for (int i = Math.Max(1, Model.PageNum - 2); i <= Math.Min(Model.TotalPages, Model.PageNum + 2); i++)
                        {
                            <li class="page-item @(i == Model.PageNum ? "active" : "")">
                                <a class="page-link" asp-page="/Admin/Members" asp-route-pageNum="@i" asp-route-pageSize="@Model.PageSize" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" asp-route-status="@Model.StatusFilter" asp-route-plan="@Model.MembershipPlanFilter">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.PageNum == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" asp-page="/Admin/Members" asp-route-pageNum="@(Model.PageNum + 1)" asp-route-pageSize="@Model.PageSize" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" asp-route-status="@Model.StatusFilter" asp-route-plan="@Model.MembershipPlanFilter">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
        </div>
    </div>
</div>
