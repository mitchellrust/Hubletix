@using ClubManagement.Api.Models
@model EventsTableViewModel

<div class="row @Model.ContainerClass">
    @if (Model.ShowFilterFacets)
    {
        <!-- Facet Filter Panel (Desktop) -->
        <div class="col-auto mb-4 d-none d-xl-block" style="max-width: 280px; min-width: 250px;">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Filters</h6>
                    @if (Model.HasActiveFilters)
                    {
                        <a href="@Model.PageName?status=all&date=all&sort=@Model.SortField&dir=@Model.SortDirection" class="btn btn-sm btn-link text-decoration-none p-0">Clear</a>
                    }
                </div>
                <div class="card-body p-0">                    
                    <!-- Status Facet -->
                    <div class="border-bottom p-3">
                        <h6 class="mb-2 fw-semibold small text-uppercase text-muted">Status</h6>
                        <div class="list-group list-group-flush small">
                            <a href="@Model.BuildStatusUrl("all")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.StatusFilter == "all" ? "fw-bold text-primary" : "")">
                                All
                            </a>
                            <a href="@Model.BuildStatusUrl("active")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.StatusFilter == "active" ? "fw-bold text-primary" : "")">
                                Active
                            </a>
                            <a href="@Model.BuildStatusUrl("inactive")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.StatusFilter == "inactive" ? "fw-bold text-primary" : "")">
                                Inactive
                            </a>
                        </div>
                    </div>

                    <!-- Date Filter Facet -->
                    <div class="border-bottom p-3">
                        <h6 class="mb-2 fw-semibold small text-uppercase text-muted">Date</h6>
                        <div class="list-group list-group-flush small">
                            <a href="@Model.BuildDateUrl("all")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.DateFilter == "all" ? "fw-bold text-primary" : "")">
                                All
                            </a>
                            <a href="@Model.BuildDateUrl("upcoming")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.DateFilter == "upcoming" ? "fw-bold text-primary" : "")">
                                Upcoming
                            </a>
                            <a href="@Model.BuildDateUrl("past")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.DateFilter == "past" ? "fw-bold text-primary" : "")">
                                Past
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="col">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">@Model.Title</h3>
                    <div class="d-flex gap-2 align-items-center">
                        @if (Model.ShowFilterFacets)
                        {
                            <button class="btn btn-sm btn-outline-secondary d-xl-none" data-bs-toggle="modal" data-bs-target="#filterModal">
                                <i class="bi bi-funnel"></i> Filters
                                @if (Model.HasActiveFilters)
                                {
                                    <span class="badge bg-primary rounded-pill ms-1">â€¢</span>
                                }
                            </button>
                        }
                        <a class="btn btn-sm btn-primary" href="/admin/events/create">Create Event</a>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <a href="@Model.BuildSortUrl("date")" class="text-decoration-none">
                                    Event Start
                                    @if (Model.SortField == "date")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Model.BuildSortUrl("name")" class="text-decoration-none">
                                    Name
                                    @if (Model.SortField == "name")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Model.BuildSortUrl("type")" class="text-decoration-none">
                                    Type
                                    @if (Model.SortField == "type")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Model.BuildSortUrl("capacity")" class="text-decoration-none">
                                    Capacity
                                    @if (Model.SortField == "capacity")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="@Model.BuildSortUrl("registrations")" class="text-decoration-none">
                                    Registrations
                                    @if (Model.SortField == "registrations")
                                    {
                                        <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                    }
                                </a>
                            </th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Events.Any())
                        {
                            @foreach (var evt in Model.Events)
                            {
                                <tr class="@(evt.IsActive ? "" : "table-secondary")">
                                    <td>
                                        <div class="fw-semibold">@evt.Date.ToString("MMM dd, yyyy")</div>
                                        <div class="text-muted small">@evt.Time</div>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">
                                            @evt.Name
                                            @if (!evt.IsActive)
                                            {
                                                <span class="badge bg-secondary ms-1">Inactive</span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(evt.Location))
                                        {
                                            <div class="text-muted small">@evt.Location</div>
                                        }
                                    </td>
                                    <td>@evt.EventType</td>
                                    <td>@evt.Capacity</td>
                                    <td>@evt.Registrations</td>
                                    <td class="text-end">
                                        <a href="/admin/events/@evt.Id" class="btn btn-sm btn-outline-secondary">Manage</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    @Model.EmptyMessage
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        Page @Model.PageNum of @Model.TotalPages
                    </div>
                    <div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item @(Model.PageNum == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Model.BuildPageUrl(Model.PageNum - 1)">Previous</a>
                                </li>
                                @for (int i = Math.Max(1, Model.PageNum - 2); i <= Math.Min(Model.TotalPages, Model.PageNum + 2); i++)
                                {
                                    <li class="page-item @(i == Model.PageNum ? "active" : "")">
                                        <a class="page-link" href="@Model.BuildPageUrl(i)">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.PageNum == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Model.BuildPageUrl(Model.PageNum + 1)">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@if (Model.ShowFilterFacets)
{
    <!-- Filter Modal (Mobile) -->
    <div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="filterModalLabel">Filter Events</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" onclick="resetFilters()" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="filterForm" action="@Model.PageName" method="get">
                        <input type="hidden" name="sort" value="@Model.SortField" />
                        <input type="hidden" name="dir" value="@Model.SortDirection" />
                        
                        <!-- Status Filter -->
                        <div class="mb-4">
                            <h6 class="fw-semibold text-uppercase text-muted small mb-3">Status</h6>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="statusAll" value="all" 
                                       @(Model.StatusFilter == "all" ? "checked" : "")>
                                <label class="form-check-label" for="statusAll">All</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="statusActive" value="active" 
                                       @(Model.StatusFilter == "active" ? "checked" : "")>
                                <label class="form-check-label" for="statusActive">Active</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" id="statusInactive" value="inactive" 
                                       @(Model.StatusFilter == "inactive" ? "checked" : "")>
                                <label class="form-check-label" for="statusInactive">Inactive</label>
                            </div>
                        </div>

                        <!-- Date Filter -->
                        <div class="mb-4">
                            <h6 class="fw-semibold text-uppercase text-muted small mb-3">Date</h6>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="date" id="dateAll" value="all" 
                                       @(Model.DateFilter == "all" ? "checked" : "")>
                                <label class="form-check-label" for="dateAll">All</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="date" id="dateUpcoming" value="upcoming" 
                                       @(Model.DateFilter == "upcoming" ? "checked" : "")>
                                <label class="form-check-label" for="dateUpcoming">Upcoming</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="date" id="datePast" value="past" 
                                       @(Model.DateFilter == "past" ? "checked" : "")>
                                <label class="form-check-label" for="datePast">Past</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="resetFilters()">Cancel</button>
                    <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">Clear</button>
                    <button type="button" class="btn btn-primary" onclick="applyFilters()">Apply Filters</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        let initialStatus = '@Model.StatusFilter';
        let initialDate = '@Model.DateFilter';
        
        function applyFilters() {
            document.getElementById('filterForm').submit();
        }
        
        function clearFilters() {
            const form = document.getElementById('filterForm');
            const sortField = form.querySelector('input[name="sort"]').value;
            const sortDir = form.querySelector('input[name="dir"]').value;
            window.location.href = `@Model.PageName?status=all&date=all&sort=${sortField}&dir=${sortDir}`;
        }
        
        function resetFilters() {
            const statusRadios = document.querySelectorAll('input[name="status"]');
            statusRadios.forEach(radio => {
                radio.checked = (radio.value === initialStatus);
            });
            
            const dateRadios = document.querySelectorAll('input[name="date"]');
            dateRadios.forEach(radio => {
                radio.checked = (radio.value === initialDate);
            });
        }
    </script>
}
