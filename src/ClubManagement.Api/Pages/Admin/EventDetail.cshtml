@page "/admin/events/{id}"
@model EventDetailModel
@{
    ViewData["Title"] = "Edit Event";
    ViewData["TenantName"] = Model.CurrentTenantInfo.Name;
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">

    @if (Model.Event == null)
    {
        <div class="row mb-4">
            <div class="col-12">
                <a href="/admin/events" class="btn btn-sm btn-outline-secondary mb-3">
                    <i class="bi bi-arrow-left"></i> View All Events
                </a>
                <h1 class="display-5 fw-bold">Uh-Oh!</h1>
                <p class="text-muted">Sorry, that event was not found.</p>
            </div>
        </div>
    }
    else {
        <div class="row mb-4">
            <div class="col-12">
                <a href="/admin/events" class="btn btn-sm btn-outline-secondary mb-3">
                    <i class="bi bi-arrow-left"></i> View All Events
                </a>
                <h1 class="display-5 fw-bold">@Model.Event.Name</h1>
                @if (!string.IsNullOrWhiteSpace(Model.Event.CreatedBy))
                {
                    <p class="text-muted">Created by @Model.Event.CreatedBy</p>
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @Model.StatusMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row">
            <div class="col-12 col-lg-8 order-1">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">Event Details</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="Event.Id" />

                            <div class="mb-3">
                                <label asp-for="Event.Name" class="form-label">Event Name</label>
                                <input class="form-control" asp-for="Event.Name" placeholder="Enter event name" />
                                <span asp-validation-for="Event.Name" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Event.Description" class="form-label">Description</label>
                                <textarea class="form-control" asp-for="Event.Description" rows="3" placeholder="Enter event description"></textarea>
                                <span asp-validation-for="Event.Description" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-12 col-md-6 mb-3">
                                    <label asp-for="Event.EventType" class="form-label">Event Type</label>
                                    <select class="form-select" asp-for="Event.EventType" asp-items="Model.EventTypeOptions"></select>
                                    <span asp-validation-for="Event.EventType" class="text-danger small"></span>
                                </div>

                                <div class="col-12 col-md-6 mb-3">
                                    <label asp-for="Event.Capacity" class="form-label">Capacity</label>
                                    <input type="number" class="form-control" asp-for="Event.Capacity" min="1" placeholder="Enter max capacity" />
                                    <span asp-validation-for="Event.Capacity" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 col-md-6 mb-3">
                                    <label asp-for="LocalStartTime" class="form-label">Start Time</label>
                                    <input type="datetime-local" class="form-control" asp-for="LocalStartTime" />
                                    <span class="text-muted small">Local time in selected timezone</span>
                                </div>

                                <div class="col-12 col-md-6 mb-3">
                                    <label asp-for="LocalEndTime" class="form-label">End Time</label>
                                    <input type="datetime-local" class="form-control" asp-for="LocalEndTime" />
                                    <span class="text-muted small">Local time in selected timezone</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Event.TimeZoneId" class="form-label">Time Zone</label>
                                <select class="form-select" asp-for="Event.TimeZoneId" asp-items="Model.TimeZoneOptions"></select>
                                <span asp-validation-for="Event.TimeZoneId" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Status</label>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="isActive" asp-for="Event.IsActive" onchange="updateStatusLabel(this)" />
                                    <label class="form-check-label" for="isActive" id="statusLabel">
                                        @(Model.Event.IsActive == true ? "Active" : "Inactive")
                                    </label>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <a href="/admin/events" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4 order-3 order-lg-2">
                <div class="card border-0 shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Danger Zone</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small">Once you delete an event, there is no going back. Please be certain.</p>
                        <button type="button" class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            Delete Event
                        </button>
                    </div>
                </div>
            </div>

            <!-- Event Registrations Section -->
            <div class="col-12 order-2 order-lg-3 my-5">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Registrations</h4>
                        <div class="btn-group btn-group-sm" role="group">
                            <a asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-regStatus="all" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                               class="btn @(Model.RegistrationStatusFilter == "all" ? "btn-primary" : "btn-outline-primary")">All</a>
                            <a asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-regStatus="registered" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                               class="btn @(Model.RegistrationStatusFilter == "registered" ? "btn-primary" : "btn-outline-primary")">Registered</a>
                            <a asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-regStatus="attended" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                               class="btn @(Model.RegistrationStatusFilter == "attended" ? "btn-primary" : "btn-outline-primary")">Attended</a>
                            <a asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-regStatus="waitlist" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                               class="btn @(Model.RegistrationStatusFilter == "waitlist" ? "btn-primary" : "btn-outline-primary")">Waitlist</a>
                            <a asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-regStatus="cancelled" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" 
                               class="btn @(Model.RegistrationStatusFilter == "cancelled" ? "btn-primary" : "btn-outline-primary")">Cancelled</a>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <a asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-sort="user" asp-route-dir="@(Model.SortField == "user" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-regStatus="@Model.RegistrationStatusFilter" class="text-decoration-none">
                                        Member
                                        @if (Model.SortField == "user")
                                        {
                                            <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                        }
                                    </a>
                                </th>
                                <th>
                                    <a asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-sort="date" asp-route-dir="@(Model.SortField == "date" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-regStatus="@Model.RegistrationStatusFilter" class="text-decoration-none">
                                        Registered
                                        @if (Model.SortField == "date")
                                        {
                                            <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                        }
                                    </a>
                                </th>
                                <th>
                                    <a asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-sort="status" asp-route-dir="@(Model.SortField == "status" && Model.SortDirection == "asc" ? "desc" : "asc")" asp-route-regStatus="@Model.RegistrationStatusFilter" class="text-decoration-none">
                                        Status
                                        @if (Model.SortField == "status")
                                        {
                                            <i class="bi bi-arrow-@(Model.SortDirection == "asc" ? "down" : "up")"></i>
                                        }
                                    </a>
                                </th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Registrations.Any())
                            {
                                @foreach (var reg in Model.Registrations)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@reg.UserName</div>
                                        </td>
                                        <td>
                                            <span class="text-muted">@reg.SignedUpAt.ToString("MMM d, yyyy")</span>
                                        </td>
                                        <td>
                                            @{
                                                var badgeClass = reg.Status.ToLower() switch
                                                {
                                                    "registered" => "bg-success",
                                                    "attended" => "bg-primary",
                                                    "waitlist" => "bg-warning",
                                                    "cancelled" => "bg-secondary",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @badgeClass">@reg.Status</span>
                                            @if (!string.IsNullOrEmpty(reg.CancellationReason))
                                            {
                                                <div><small class="text-muted">@reg.CancellationReason</small></div>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="alert('TODO: Manage registration')">Manage</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        <i class="bi bi-calendar-check fs-1 d-block mb-2"></i>
                                        No registrations found for this event.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                        <div class="text-muted small">
                            Page @Model.PageNum of @Model.TotalPages
                        </div>
                        <div>
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item @(Model.PageNum == 1 ? "disabled" : "")">
                                        <a class="page-link" asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-pageNum="@(Model.PageNum - 1)" asp-route-pageSize="@Model.PageSize" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" asp-route-regStatus="@Model.RegistrationStatusFilter">Previous</a>
                                    </li>
                                    @for (int i = Math.Max(1, Model.PageNum - 2); i <= Math.Min(Model.TotalPages, Model.PageNum + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.PageNum ? "active" : "")">
                                            <a class="page-link" asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-pageNum="@i" asp-route-pageSize="@Model.PageSize" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" asp-route-regStatus="@Model.RegistrationStatusFilter">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(Model.PageNum == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link" asp-page="/Admin/EventDetail" asp-route-id="@Model.Event.Id" asp-route-pageNum="@(Model.PageNum + 1)" asp-route-pageSize="@Model.PageSize" asp-route-sort="@Model.SortField" asp-route-dir="@Model.SortDirection" asp-route-regStatus="@Model.RegistrationStatusFilter">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                }
            </div>
        </div>
        </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header border-danger">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Event?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong>@Model.Event.Name</strong>?</p>
                    <p class="text-muted small">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="post" asp-page-handler="Delete" style="display: inline;">
                        <input type="hidden" asp-for="Event.Id" />
                        <button type="submit" class="btn btn-danger">Delete Event</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Update event status label on toggle
        function updateStatusLabel(checkbox) {
            document.getElementById('statusLabel').textContent = checkbox.checked ? 'Active' : 'Inactive';
        }
    </script>
    }
</div>
