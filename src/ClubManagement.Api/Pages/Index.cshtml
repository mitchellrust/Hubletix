@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Club Management</h1>
    <p>Multi-tenant SaaS platform for sports clubs.</p>
</div>

<div class="alert alert-success" role="alert">
    <h4 class="alert-heading">Bootstrap is working!</h4>
    <p>If you see this styled box, Bootstrap CSS loaded correctly.</p>
</div>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#testModal">
    Test Bootstrap JS
</button>

<div class="modal fade" id="testModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bootstrap JS Works!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                If this modal opens, Bootstrap JS is loaded correctly.
            </div>
        </div>
    </div>
</div>