@page
@model EventsModel
@{
    ViewData["Title"] = "Events";
    Layout = "_PublicLayout";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-4 fw-bold mb-3">Upcoming Events</h1>
            <p class="lead text-muted">Join us for exciting events and activities</p>
        </div>
    </div>

    <div class="row">
        <!-- Filter Sidebar (Desktop) -->
        <div class="col-lg-3 mb-4 d-none d-lg-block">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Filters</h6>
                    @if (Model.HasActiveFilters)
                    {
                        <a href="/events?TypeFilter=all&AvailabilityFilter=all" class="btn btn-sm btn-link text-decoration-none p-0">Clear</a>
                    }
                </div>
                <div class="card-body p-0">
                    <!-- Event Type Filter -->
                    <div class="border-bottom p-3">
                        <h6 class="mb-2 fw-semibold small text-uppercase text-muted">Event Type</h6>
                        <div class="list-group list-group-flush small">
                            <a href="@Model.BuildTypeUrl("all")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.TypeFilter == "all" ? "fw-bold text-primary" : "")">
                                All Types
                            </a>
                            <a href="@Model.BuildTypeUrl("Class")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.TypeFilter == "Class" ? "fw-bold text-primary" : "")">
                                Class
                            </a>
                            <a href="@Model.BuildTypeUrl("Workshop")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.TypeFilter == "Workshop" ? "fw-bold text-primary" : "")">
                                Workshop
                            </a>
                            <a href="@Model.BuildTypeUrl("GroupEvent")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.TypeFilter == "GroupEvent" ? "fw-bold text-primary" : "")">
                                Group Event
                            </a>
                            <a href="@Model.BuildTypeUrl("Social")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.TypeFilter == "Social" ? "fw-bold text-primary" : "")">
                                Social
                            </a>
                            <a href="@Model.BuildTypeUrl("Competition")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.TypeFilter == "Competition" ? "fw-bold text-primary" : "")">
                                Competition
                            </a>
                            <a href="@Model.BuildTypeUrl("Other")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.TypeFilter == "Other" ? "fw-bold text-primary" : "")">
                                Other
                            </a>
                        </div>
                    </div>

                    <!-- Availability Filter -->
                    <div class="border-bottom p-3">
                        <h6 class="mb-2 fw-semibold small text-uppercase text-muted">Availability</h6>
                        <div class="list-group list-group-flush small">
                            <a href="@Model.BuildAvailabilityUrl("all")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.AvailabilityFilter == "all" ? "fw-bold text-primary" : "")">
                                All
                            </a>
                            <a href="@Model.BuildAvailabilityUrl("available")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.AvailabilityFilter == "available" ? "fw-bold text-primary" : "")">
                                Available
                            </a>
                            <a href="@Model.BuildAvailabilityUrl("full")" class="list-group-item list-group-item-action border-0 py-1 px-0 @(Model.AvailabilityFilter == "full" ? "fw-bold text-primary" : "")">
                                Full
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Events List -->
        <div class="col-lg-9">
            <!-- Mobile Filter Button -->
            <div class="d-lg-none mb-3">
                <button class="btn btn-outline-secondary w-100" data-bs-toggle="modal" data-bs-target="#filterModal">
                    <i class="bi bi-funnel me-2"></i>Filters
                    @if (Model.HasActiveFilters)
                    {
                        <span class="badge bg-primary rounded-pill ms-2">Active</span>
                    }
                </button>
            </div>

            @if (!Model.UpcomingEvents.Any())
            {
                <div class="text-center py-5">
            <div class="col-lg-6 mx-auto">
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x display-1 text-muted mb-4"></i>
                    <h3 class="mb-3">No Upcoming Events</h3>
                    <p class="text-muted">Check back soon for new events!</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var evt in Model.UpcomingEvents)
            {
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="row align-items-center">
                                <!-- Date/Time Section -->
                                <div class="col-auto">
                                    <div class="text-center bg-light rounded p-3" style="min-width: 100px;">
                                        @if (evt.IsSameDay)
                                        {
                                            @if (evt.StartTimeLocal.Date == DateTime.Today)
                                            {
                                                <div class="text-uppercase small fw-semibold text-muted">Today</div>
                                            }
                                            else if (evt.StartTimeLocal.Date == DateTime.Today.AddDays(1))
                                            {
                                                <div class="text-uppercase small fw-semibold text-muted">Tomorrow</div>
                                            }
                                            else
                                            {
                                                <div class="text-uppercase small fw-semibold text-muted">@evt.StartTimeLocal.ToString("dd MMM")</div>
                                            }
                                            <div class="h2 fw-bold mb-0" style="@($"color: {evt.AccentColor ?? "var(--bs-primary)"};")">
                                                @evt.StartTimeLocal.ToString("h:mm tt")
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-uppercase small fw-semibold text-muted">
                                                @evt.StartTimeLocal.ToString("dd MMM") - @evt.EndTimeLocal?.ToString("dd MMM")
                                            </div>
                                            <div class="h2 fw-bold mb-0" style="@($"color: {evt.AccentColor ?? "var(--bs-primary)"};")">
                                                @evt.StartTimeLocal.ToString("h:mm tt")
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- Event Details Section -->
                                <div class="col">
                                    <div class="mb-2">
                                        <h3 class="h4 fw-bold mb-2">@evt.Name</h3>
                                        @if (!string.IsNullOrEmpty(evt.Description))
                                        {
                                            <p class="text-muted mb-2 event-card-description">@evt.Description</p>
                                        }
                                        @if (evt.MaxAttendees.HasValue)
                                        {
                                            <div class="small text-muted mt-1">
                                                <i class="bi bi-people me-1"></i>
                                                @evt.CurrentAttendees / @evt.MaxAttendees attendees
                                                @if (evt.IsFull)
                                                {
                                                    <span class="badge bg-danger ms-2">Event Full</span>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- Action Buttons Section -->
                                <div class="col-auto">
                                    <div class="d-flex flex-column gap-2">
                                        @if (evt.IsFull)
                                        {
                                            <button class="btn btn-secondary rounded-pill px-4" disabled>
                                                Event Full
                                            </button>
                                        }
                                        else
                                        {
                                            <a href="/event/@evt.Id/register" class="btn btn-dark rounded-pill px-4" style="background-color: var(--bs-primary); border-color: var(--bs-primary);">
                                                <i class="bi bi-calendar-check me-2"></i>Register
                                            </a>
                                        }
                                        <a href="/event/@evt.Id" class="btn btn-outline-secondary rounded-pill px-4">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
                </div>
            }
            
            <!-- Loading Spinner -->
            <div id="loadingSpinner" class="text-center py-4" style="display: none;">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted mt-2">Loading more events...</p>
            </div>
        </div>
    </div>
</div>

<!-- Filter Modal (Mobile) -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filterModalLabel">Filter Events</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="filterForm" action="/events" method="get">
                    <!-- Event Type Filter -->
                    <div class="mb-4">
                        <h6 class="fw-semibold text-uppercase text-muted small mb-3">Event Type</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="TypeFilter" id="typeAll" value="all" 
                                   @(Model.TypeFilter == "all" ? "checked" : "")>
                            <label class="form-check-label" for="typeAll">All Types</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="TypeFilter" id="typeClass" value="Class" 
                                   @(Model.TypeFilter == "Class" ? "checked" : "")>
                            <label class="form-check-label" for="typeClass">Class</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="TypeFilter" id="typeWorkshop" value="Workshop" 
                                   @(Model.TypeFilter == "Workshop" ? "checked" : "")>
                            <label class="form-check-label" for="typeWorkshop">Workshop</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="TypeFilter" id="typeGroup" value="GroupEvent" 
                                   @(Model.TypeFilter == "GroupEvent" ? "checked" : "")>
                            <label class="form-check-label" for="typeGroup">Group Event</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="TypeFilter" id="typeSocial" value="Social" 
                                   @(Model.TypeFilter == "Social" ? "checked" : "")>
                            <label class="form-check-label" for="typeSocial">Social</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="TypeFilter" id="typeCompetition" value="Competition" 
                                   @(Model.TypeFilter == "Competition" ? "checked" : "")>
                            <label class="form-check-label" for="typeCompetition">Competition</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="TypeFilter" id="typeOther" value="Other" 
                                   @(Model.TypeFilter == "Other" ? "checked" : "")>
                            <label class="form-check-label" for="typeOther">Other</label>
                        </div>
                    </div>

                    <!-- Availability Filter -->
                    <div class="mb-4">
                        <h6 class="fw-semibold text-uppercase text-muted small mb-3">Availability</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="AvailabilityFilter" id="availabilityAll" value="all" 
                                   @(Model.AvailabilityFilter == "all" ? "checked" : "")>
                            <label class="form-check-label" for="availabilityAll">All</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="AvailabilityFilter" id="availabilityAvailable" value="available" 
                                   @(Model.AvailabilityFilter == "available" ? "checked" : "")>
                            <label class="form-check-label" for="availabilityAvailable">Available</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="AvailabilityFilter" id="availabilityFull" value="full" 
                                   @(Model.AvailabilityFilter == "full" ? "checked" : "")>
                            <label class="form-check-label" for="availabilityFull">Full</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">Clear</button>
                <button type="button" class="btn btn-primary" onclick="applyFilters()">Apply Filters</button>
            </div>
        </div>
    </div>
</div>

<script>
    let currentPage = @Model.PageNum;
    let hasMoreEvents = @(Model.HasMoreEvents ? "true" : "false");
    let isLoading = false;
    const typeFilter = '@Model.TypeFilter';
    const availabilityFilter = '@Model.AvailabilityFilter';
    
    function applyFilters() {
        document.getElementById('filterForm').submit();
    }
    
    function clearFilters() {
        window.location.href = '/events?TypeFilter=all&AvailabilityFilter=all';
    }
    
    // Infinite scroll functionality
    function checkScroll() {
        if (isLoading || !hasMoreEvents) return;
        
        const scrollPosition = window.innerHeight + window.scrollY;
        const pageHeight = document.documentElement.scrollHeight;
        
        // Load more when within 500px of bottom
        if (scrollPosition >= pageHeight - 500) {
            loadMoreEvents();
        }
    }
    
    async function loadMoreEvents() {
        if (isLoading || !hasMoreEvents) return;
        
        isLoading = true;
        document.getElementById('loadingSpinner').style.display = 'block';
        
        try {
            currentPage++;
            const response = await fetch(`/events?handler=LoadMore&pageNum=${currentPage}&typeFilter=${typeFilter}&availabilityFilter=${availabilityFilter}`);
            const data = await response.json();
            
            if (data.events && data.events.length > 0) {
                const eventsContainer = document.querySelector('.row.g-4');
                data.events.forEach(evt => {
                    eventsContainer.insertAdjacentHTML('beforeend', createEventCard(evt));
                });
                
                hasMoreEvents = data.hasMore;
            } else {
                hasMoreEvents = false;
            }
        } catch (error) {
            console.error('Error loading more events:', error);
            currentPage--;
        } finally {
            isLoading = false;
            document.getElementById('loadingSpinner').style.display = 'none';
        }
    }
    
    function createEventCard(evt) {
        const isSoldOut = evt.maxAttendees && evt.currentAttendees >= evt.maxAttendees;
        const startDate = new Date(evt.startTimeLocal);
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        const tomorrow = new Date(today);
        tomorrow.setDate(tomorrow.getDate() + 1);
        
        let dateLabel = '';
        if (startDate.toDateString() === today.toDateString()) {
            dateLabel = 'Today';
        } else if (startDate.toDateString() === tomorrow.toDateString()) {
            dateLabel = 'Tomorrow';
        } else {
            dateLabel = startDate.toLocaleDateString('en-US', { day: '2-digit', month: 'short' });
        }
        
        const timeString = startDate.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit', hour12: true });
        
        return `
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="text-center bg-light rounded p-3" style="min-width: 100px;">
                                    <div class="text-uppercase small fw-semibold text-muted">${dateLabel}</div>
                                    <div class="h2 fw-bold mb-0" style="color: ${evt.accentColor || 'var(--bs-primary)'};">
                                        ${timeString}
                                    </div>
                                </div>
                            </div>
                            <div class="col">
                                <div class="mb-2">
                                    <h3 class="h4 fw-bold mb-2">${evt.name}</h3>
                                    ${evt.description ? `<p class="text-muted mb-2 event-card-description">${evt.description}</p>` : ''}
                                    ${evt.location ? `<div class="small text-muted"><i class="bi bi-geo-alt me-1"></i>${evt.location}</div>` : ''}
                                    ${evt.maxAttendees ? `
                                        <div class="small text-muted mt-1">
                                            <i class="bi bi-people me-1"></i>
                                            ${evt.currentAttendees} / ${evt.maxAttendees} attendees
                                            ${isSoldOut ? '<span class="badge bg-danger ms-2">Sold Out</span>' : ''}
                                        </div>
                                    ` : ''}
                                </div>
                            </div>
                            <div class="col-auto">
                                <div class="d-flex flex-column gap-2">
                                    ${isSoldOut ? 
                                        '<button class="btn btn-secondary rounded-pill px-4" disabled>Sold Out</button>' :
                                        `<a href="/event/${evt.id}/register" class="btn btn-dark rounded-pill px-4" style="background-color: var(--bs-primary); border-color: var(--bs-primary);"><i class="bi bi-calendar-check me-2"></i>Register</a>`
                                    }
                                    <a href="/event/${evt.id}" class="btn btn-outline-secondary rounded-pill px-4">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        `;
    }
    
    // Attach scroll listener
    window.addEventListener('scroll', checkScroll);
    window.addEventListener('resize', checkScroll);
</script>

<style>
    .event-card-description {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
