@using ClubManagement.Api.Models
@model ServicesSectionViewModel

<section class="services-section py-5">
    <div class="container py-4">
        <div class="row mb-5">
            <div class="col-lg-8 mx-auto text-center">
                @if (!string.IsNullOrEmpty(Model.Heading))
                {
                    <h2 class="display-5 fw-bold mb-4">@Model.Heading</h2>
                }
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="lead text-muted">@Model.Description</p>
                }
            </div>
        </div>

        @if (Model.Services.Any())
        {
            <div class="row g-4">
                @foreach (ServiceCard service in Model.Services)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-sm overflow-hidden service-card">
                            @if (!string.IsNullOrEmpty(service.ImageUrl))
                            {
                                <div class="position-relative" style="height: 250px; overflow: hidden;">
                                    <img src="@service.ImageUrl" class="card-img-top w-100 h-100" alt="@service.Title" style="object-fit: cover; transition: transform 0.3s ease;">
                                    @if (!string.IsNullOrEmpty(service.Subtitle))
                                    {
                                        <div class="position-absolute top-0 start-0 m-3">
                                            <span class="badge rounded-pill px-3 py-2" style="background-color: rgba(255,255,255,0.9); color: #333;"">
                                                @service.Subtitle
                                            </span>
                                        </div>
                                    }
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(service.Icon))
                            {
                                <div class="card-body text-center pt-5">
                                    <i class="bi bi-@service.Icon display-1 mb-3" style="@($"color: {Model.AccentColor ?? "var(--bs-secondary)"};")"></i>
                                </div>
                            }
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(service.Subtitle) && string.IsNullOrEmpty(service.ImageUrl))
                                {
                                    <span class="badge mb-2">@service.Subtitle</span>
                                }
                                <h5 class="card-title fw-bold mb-3">@service.Title</h5>
                                <p class="card-text text-muted">@service.Description</p>
                                @if (!string.IsNullOrEmpty(service.LinkUrl))
                                {
                                    <a href="@service.LinkUrl" class="btn btn-link text-decoration-none p-0" style="@($"color: {Model.AccentColor ?? "var(--bs-primary)"};")">
                                        @(service.LinkText ?? "Learn more") <i class="bi bi-arrow-right ms-1"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<style>
    .service-card:hover img {
        transform: scale(1.05);
    }
</style>
