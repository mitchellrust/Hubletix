@using ClubManagement.Api.Models
@model HeroViewModel

<section class="hero-section position-relative overflow-hidden" style="min-height: 500px; @(!string.IsNullOrEmpty(Model.BackgroundImageUrl) ? $"background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('{Model.BackgroundImageUrl}');" : "background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);") background-size: cover; background-position: center;">
    <div class="container">
        <div class="row min-vh-50 align-items-center py-5">
            <div class="col-lg-8 col-xl-7 text-white">
                <h1 class="display-3 fw-bold mb-4" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.3);">
                    @Model.Heading
                </h1>
                <p class="lead mb-4 fs-4" style="text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">
                    @Model.Subheading
                </p>
                <a href="@Model.CtaUrl" class="btn btn-lg btn-light px-5 py-3 rounded-pill shadow-lg" style="@(!string.IsNullOrEmpty(Model.PrimaryColor) ? $"background-color: {Model.PrimaryColor}; border-color: {Model.PrimaryColor}; color: white;" : "")">
                    @Model.CtaText <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>
